<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/statusbar_text</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppThemeNoAction" parent="@android:style/Theme.Material.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/statusbar_text</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

        <!-- Styling the color picker dialog fragment.
             Below are some styles that show you how to
             change the apperance of the color picker dialog.
         -->

        <style name="LightPickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
            <item name="android:colorAccent">#0277BD</item>
            <item name="android:windowTitleStyle">@style/LightPickerDialogTitleStyle</item>
        </style>

        <style name="DarkPickerDialogTheme" parent="android:Theme.Material.Dialog">
            <item name="android:colorAccent">#B3E5FC</item>
            <item name="android:windowTitleStyle">@style/DarkPickerDialogTitleStyle</item>
        </style>


        <style name="LightPickerDialogTitleStyle">
            <item name="android:maxLines">1</item>
            <item name="android:scrollHorizontally">true</item>
            <item name="android:textAppearance">@android:style/TextAppearance.Material.DialogWindowTitle</item>
            <item name="android:textColor">#545454</item>
        </style>

        <style name="DarkPickerDialogTitleStyle">
            <item name="android:maxLines">1</item>
            <item name="android:scrollHorizontally">true</item>
            <item name="android:textAppearance">@android:style/TextAppearance.Material.DialogWindowTitle</item>
            <item name="android:textColor">#AAAAAA</item>
        </style>

    <style name="SizeDialogButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="SplashScreen" parent="android:Theme.Material.NoActionBar">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

</resources>