<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_window"
    tools:context=".MainActivity"
    android:background="#EEEEEE">
        <LinearLayout
            android:id="@+id/fragment_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
            android:id="@+id/button_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:layout_marginTop="10sp"
                >
                <Button
                    android:textSize="10sp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_marginLeft="15sp"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_friends_button"
                    android:id="@+id/choose_friends_button"
                    android:layout_gravity="center_horizontal" />
                <Button
                    android:textSize="10sp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_marginRight="15sp"
                    android:layout_height="wrap_content"
                    android:text="@string/message_room_button"
                    android:id="@+id/chat_room_button"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <fragment
                android:name="com.example.kiwitech.socialsketch.Fragments.CanvasFragment"
                tools:context="com.example.kiwitech.socialsketch.MainActivity"
                android:id="@+id/Canvas_Fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            </fragment>

            <fragment
                android:name="com.example.kiwitech.socialsketch.Fragments.ToolsPaneFragment"
                tools:context="com.example.kiwitech.socialsketch.MainActivity"
                android:id="@+id/tools"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">
            </fragment>
    </LinearLayout>
</FrameLayout>
