<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_window"
    tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/fragment_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <fragment
            android:name="com.example.kiwitech.socialsketch.canvas.CanvasFragment"
            tools:context="com.example.kiwitech.socialsketch.MainActivity"
            android:id="@+id/Canvas_Fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </fragment>

        <fragment
            android:name="com.example.kiwitech.socialsketch.tools_pane.ToolsPaneFragment"
            tools:context="com.example.kiwitech.socialsketch.MainActivity"
            android:id="@+id/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">
        </fragment>
    </LinearLayout>
</FrameLayout>
